@startuml
!theme idta from https://raw.githubusercontent.com/admin-shell-io/aas-specs-antora/main/plantuml/

skinparam packageStyle rect

package "A)" as A {
    class Class1 {
    }
    class Class2 {
    }
    Class1 o-- "+attr" Class2
}

package "B)" as B {
    class Class1 {
      +attr: Reference
    }
    class Reference {
    }
    Class1 ..> Reference

    note right of Reference
      {Key/type = Class2
      (of last Key in Key Chain)}
    end note
}

A .[hidden]. B

